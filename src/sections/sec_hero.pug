section.hero
  .container.hero__cont
    header.header
       .header__logo
        .logo ВЗ
       .header__btns
          nav.menu.header-menu
             -var items =["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Cвязаться"];
             ul.menu__list
                each item in items
                  li.menu__item
                    a.menu__link #{item}
       .header__links
         - var icons = ["insta", "vk", "github"];
         ul.socials.header-socials
           each item in icons
             li.socials__item
               a(href="").socials__li
                 +icon(item, "socials__icon")
       a.hamburger
         span.hamburger__line
          

                   
    .hero__intro
      .intro-user
        .intro-user__desc Личный сайт <br> веб-разработчика
        h1.intro-title Владислав <br> Забуранный
    a.scroll.hero__scroll
      p.scroll__text Скролл
      +icon('scroll', 'scroll__icon')
  